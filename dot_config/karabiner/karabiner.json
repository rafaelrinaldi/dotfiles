{
    "profiles": [
        {
            "complex_modifications": {
                "rules": [
                    {
                        "description": "Option + Page Up/Down to Volume Up/Down by 10% with Raycast HUD",
                        "manipulators": [
                            {
                                "from": {
                                    "key_code": "page_up",
                                    "modifiers": { "mandatory": ["option"] }
                                },
                                "to": [{ "shell_command": "newVol=$(osascript -e 'set newVol to (output volume of (get volume settings)) + 10' -e 'if newVol > 100 then set newVol to 100' -e 'set volume output volume newVol' -e 'return newVol'); open -g \"raycast://extensions/maxnyby/raycast-notification/index?launchType=background&arguments=%7B%22title%22%3A%22%F0%9F%94%8A%20Volume%3A%20${newVol}%25%22%7D\"" }],
                                "type": "basic"
                            },
                            {
                                "from": {
                                    "key_code": "page_down",
                                    "modifiers": { "mandatory": ["option"] }
                                },
                                "to": [{ "shell_command": "newVol=$(osascript -e 'set newVol to (output volume of (get volume settings)) - 10' -e 'if newVol < 0 then set newVol to 0' -e 'set volume output volume newVol' -e 'return newVol'); open -g \"raycast://extensions/maxnyby/raycast-notification/index?launchType=background&arguments=%7B%22title%22%3A%22%F0%9F%94%89%20Volume%3A%20${newVol}%25%22%7D\"" }],
                                "type": "basic"
                            }
                        ]
                    },
                    {
                        "description": "Shift+Escape to Tilde, Option+Q to Backtick",
                        "manipulators": [
                            {
                                "from": {
                                    "key_code": "escape",
                                    "modifiers": {
                                        "mandatory": ["shift"],
                                        "optional": ["caps_lock"]
                                    }
                                },
                                "to": [
                                    {
                                        "key_code": "grave_accent_and_tilde",
                                        "modifiers": ["shift"]
                                    }
                                ],
                                "type": "basic"
                            },
                            {
                                "from": {
                                    "key_code": "q",
                                    "modifiers": {
                                        "mandatory": ["option"],
                                        "optional": ["caps_lock"]
                                    }
                                },
                                "to": [{ "key_code": "grave_accent_and_tilde" }],
                                "type": "basic"
                            }
                        ]
                    }
                ]
            },
            "name": "Default profile",
            "selected": true,
            "virtual_hid_keyboard": { "keyboard_type_v2": "ansi" }
        }
    ]
}
