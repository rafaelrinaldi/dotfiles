# vim: ft=fish :
set -gx EDITOR nvim
set -gx COLORTERM truecolor
set -gx TERM xterm-256color
set -gx MANPAGER "nvim +Man!"

# bat
set -gx BAT_THEME ansi

# Homebrew
set -gx HOMEBREW_NO_AUTO_UPDATE true

# Git
set -gx GIT_AUTHOR_NAME "Rafael Rinaldi"
set -gx GIT_AUTHOR_EMAIL {{ .email }}
set -gx GIT_COMMITTER_NAME $GIT_AUTHOR_NAME
set -gx GIT_COMMITTER_EMAIL $GIT_AUTHOR_EMAIL

# GitHub
set -gx GITHUB_TOKEN {{ .github_token }}

# fzf
set -gx FZF_DEFAULT_OPTS "--height 25% --min-height 20 --reverse --border --inline-info --preview 'bat --color=auto --italic-text=always --style=header,grid {}'"
set -gx FZF_DEFAULT_COMMAND "fd --type f --strip-cwd-prefix "
set -gx FZF_CTRL_T_COMMAND "command find -L \$dir -type f 2> /dev/null | sed '1d; s#^\./##'"

{{- if contains "winchester" .chezmoi.hostname -}}
set -gx NPM_TOKEN = {{ .npm_token }}
{{- end }}

{{- if not (contains "winchester" .chezmoi.hostname) -}}
# Android
set -gx GPR_USER {{ .github_user }}
set -gx GPR_API_KEY {{ .github_token }}

set -gx ANDROID_HOME $HOME/Library/Android/sdk
set -gx ANDROID_EMU_SUPPRESS_CRASH_RPT 1 # To supress random crash messages from the emulator

fish_add_path $ANDROID_HOME/emulator
fish_add_path $ANDROID_HOME/platform-tools

# Misc
set -gx SEGMENT_TYPEWRITER_TOKEN {{ .segment_typewriter_token }}
set -gx MATCH_PASSWORD {{ .match_password }}

# npm
set -gx NPM_TOKEN {{ .npm_token }}
{{- end }}
