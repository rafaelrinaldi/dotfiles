set nocompatible
set encoding=utf-8
set mouse=a
set shiftwidth=2 smarttab
set expandtab
set backspace=2
set colorcolumn=80
set hls
set laststatus=2
set splitbelow
set splitright
set noswapfile
set listchars=tab:▸\ ,eol:¬,trail:·,nbsp:·
set list
set title
set foldenable
set foldmethod=indent
set foldnestmax=10
set nofoldenable
set foldlevel=2
set modelines=10

colorscheme habamax

filetype plugin indent on

nnoremap <Tab> za

syntax enable
set number relativenumber
